<odoo>

    <!-- Action -->
    <record id="action_hr_bonus_benefits" model="ir.actions.act_window">
        <field name="name">Bonos y beneficios</field>
        <field name="res_model">hr.bonus.benefits</field>
        <field name="view_mode">list,form</field>
    </record>

    <!-- Form -->
    <record id="view_hr_bonus_benefits_form" model="ir.ui.view">
        <field name="name">hr.bonus.benefits.form</field>
        <field name="model">hr.bonus.benefits</field>
        <field name="arch" type="xml">
            <form string="Cuenta de aporte">
                <sheet>
                    <group>
                        <field name='name' />
                        <field name='account_id' />
                        <field name='amount' />
                        <field name='value_type' />
                        <field name='active' />
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- List -->
    <record id="view_hr_bonus_benefits_list" model="ir.ui.view">
        <field name="name">hr.bonus.benefits.list</field>
        <field name="model">hr.bonus.benefits</field>
        <field name="arch" type="xml">
            <list>
                <field name='name' />
                <field name='account_id' />
                <field name='amount' />
                <field name='value_type' />
                <field name='active' />
            </list>
        </field>
    </record>

    <!-- Menu Item -->
    <menuitem name="Bonus y beneficios" id="payroll.bonus_benefits" parent="payroll.configuration" action='action_hr_bonus_benefits' />

</odoo>