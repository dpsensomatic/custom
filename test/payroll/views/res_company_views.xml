<odoo>
    <record id="view_res_company_form" model="ir.ui.view">
        <field name="name">res.company.form.settings</field>
        <field name="model">res.company</field>
        <field name="inherit_id" ref="base.view_company_form"/> <!-- Odoo ya trae esta vista -->
        <field name="arch" type="xml">
            <xpath expr="//field[@name='currency_id']" position="after">
                <field name="transportation_allowance"/>
            </xpath>
        </field>
    </record>
</odoo>
