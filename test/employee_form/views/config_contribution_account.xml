<odoo>
    <!--  -->
    <record id="view_hr_contribution_config_list" model="ir.ui.view">
        <field name="name">hr.contribution.config.list</field>
        <field name="model">hr.contribution.config</field>
        <field name="arch" type="xml">
        <list>
            <field name ='contribution_type'/>            
            <field name='account_id'/>
        </list>
        </field>
    </record>

    <!--  -->
<record id="view_hr_contribution_config_form" model="ir.ui.view">
    <field name="name">hr.contribution.config.form</field>
    <field name="model">hr.contribution.config</field>
    <field name="arch" type="xml">
        <form string="Configuración de Aportes">
            <group>
                <field name="contribution_type"/>
                <field name="account_id"/>
            </group>
        </form>
    </field>
</record>

    <!-- Acción -->
    <record id="action_hr_contribution_config" model="ir.actions.act_window">
        <field name="name">Cuentas de Aportes</field>
        <field name="res_model">hr.contribution.config</field>
        <field name="view_mode">list,form</field>
    </record>

    <!-- Menú en Configuración de Empleados -->
    <menuitem id="menu_hr_contribution_config"
              name="Cuentas de Aportes"
              parent="hr.menu_config_employee"
              action="action_hr_contribution_config"
              sequence="75"/>
</odoo>
