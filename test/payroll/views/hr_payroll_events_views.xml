<odoo>
    <!-- Action -->
    <record id="action_hr_payroll_events" model="ir.actions.act_window">
        <field name="name">Novedades</field>
        <field name="res_model">hr.payroll.events</field>
        <field name="view_mode">list,form</field>
    </record>

    <!-- Form -->
    <record id="view_hr_payroll_events_form" model="ir.ui.view">
        <field name="name">hr.payroll.events.form</field>
        <field name="model">hr.payroll.events</field>
        <field name="arch" type="xml">
            <form string="Novedadeds de Nomina">
                <sheet>
                    <group>
                        <field name='employee_id'/>
                        <field name='contract_id'/>
                        <field name='type'/>
                        <field name='date'/>
                        <field name='quantity'/>
                        <field name='date_end'/>
                        <field name='unit'/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- List o view -->
    <record id="view_hr_payroll_events_list" model="ir.ui.view">
        <field name="name">hr.payroll.events.list</field>
        <field name="model">hr.payroll.events</field>
        <field name="arch" type="xml">
            <list>
                <field name='employee_id'/>
                <field name='contract_id'/>
                <field name='type'/>
                <field name='date'/>
                <field name='quantity'/>
                <field name='date_end'/>
                <field name='unit'/>
            </list>
        </field>
    </record>

    <!-- Menu Item -->
    <menuitem name="Novedades" id="payroll.hr_payroll_events" parent="payroll.payroll" action='action_hr_payroll_events' />

</odoo>