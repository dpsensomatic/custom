<odoo>

    <!-- Action -->
    <record id="action_hr_payroll_settlement" model="ir.actions.act_window">
        <field name="name">Liquidación</field>
        <field name="res_model">hr.payroll.settlement</field>
        <field name="view_mode">list,form</field>
    </record>

    <!-- Form -->
    <record id="view_hr_payroll_settlement_form" model="ir.ui.view">
        <field name="name">hr.payroll.settlement.form</field>
        <field name="model">hr.payroll.settlement</field>
        <field name="arch" type="xml">
            <form string="Liquidación de Nómina">
                <header>
                    <button name="action_generate_lines_settlement" type="object"
                        string="Generar Liquidación" class="btn-primary oe_highlight" />
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name='state' readonly="1" />
                            <field name="name" />
                            <field name="employee_id" />
                            <field name='termination_reason' />
                            <field name="settlement_creation_date" />
                            <field name="settlement_cutoff_date" />
                        </group>
                        <group>
                            <field name="contract_id" />
                            <field name="contract_start_date" />
                            <field name="employee_identification_number" />
                            <field name="contract_end_date" />
                            <field name="contract_type" />
                            <field name="job_position" />
                        </group>
                    </group>

                    <notebook>
                        <page string="Líneas de Liquidación">
                            <group>
                                <group>
                                    <field name="contract_start_date" readonly="1" />
                                    <field name="settlement_cutoff_date" readonly="1" />
                                </group>
                                <group>
                                    <field name="days_in_contract" readonly="1" />
                                    <field name="absences_days" readonly="1" />
                                    <field name="days_liquidated" readonly="1" />
                                    <field name="wage_accrued" readonly="1" />
                                </group>
                            </group>

                            <field name="line_ids">
                                <list editable="bottom">
                                    <field name="name" string="Concepto" />
                                    <field name="amount" string="Valor" />
                                </list>
                                <form>
                                    <group>
                                        <field name="name" />
                                        <field name="amount" />
                                    </group>
                                </form>
                            </field>
                        </page>
                        <page string="Totales">
                            <group>
                                <!-- Información adicional o resumen -->
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- List -->
    <record id="view_hr_payroll_settlement_list" model="ir.ui.view">
        <field name="name">hr.payroll.settlement.list</field>
        <field name="model">hr.payroll.settlement</field>
        <field name="arch" type="xml">
            <list>
                <field name="name" />
                <field name="employee_id" />
                <field name="contract_id" />
                <field name="contract_start_date" />
                <field name="contract_end_date" />
                <field name="settlement_creation_date" />
                <field name="settlement_cutoff_date" />
                <field name="employee_identification_number" />
                <field name="contract_type" />
                <field name="job_position" />
                <field name='termination_reason' />
                <field name='state' />
            </list>
        </field>
    </record>

    <!-- Menu Item -->
    <menuitem name="Liquidación" id="payroll.settlement" parent="payroll.payroll"
        action='action_hr_payroll_settlement' sequence='10' />

</odoo>