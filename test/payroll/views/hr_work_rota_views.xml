<odoo>
    <!-- Action -->
    <record id="action_hr_work_rota" model="ir.actions.act_window">
        <field name="name">Rotas de Trabajo</field>
        <field name="res_model">hr.work.rota</field>
        <field name="view_mode">list,form</field>
    </record>

    <!-- list -->
    <record id="view_hr_work_rota_list" model="ir.ui.view">
        <field name="name">hr.work.rota.list</field>
        <field name="model">hr.work.rota</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="start_date"/>
                <field name="rotation_length"/>
            </list>
        </field>
    </record>

    <!-- Form -->
    <record id="view_hr_work_rota_form" model="ir.ui.view">
        <field name="name">hr.work.rota.form</field>
        <field name="model">hr.work.rota</field>
        <field name="arch" type="xml">
            <form string="Rota">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="start_date"/>
                        <field name="rotation_length"/>
                    </group>
                    <notebook>
                        <page string="LÃ­neas">
                            <field name="line_ids">
                                <list editable="bottom">
                                    <field name="week_index"/>
                                    <field name="dayofweek"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Menu under payroll configuration -->
    <menuitem id="menu_payroll_rota" name="Rotas" parent="payroll.configuration" action="action_hr_work_rota"/>
</odoo>
