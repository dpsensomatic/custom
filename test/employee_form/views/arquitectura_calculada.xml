<form string="Empleado" js_class="hr_employee_form">
                    <field name="active" invisible="1"/>
                    <field name="user_id" invisible="1" on_change="1" can_create="True" can_write="True"/>
                    <field name="user_partner_id" invisible="1"/>
                    <field name="image_128" invisible="1" on_change="1"/>
                    <field name="company_id" invisible="1" on_change="1" can_create="True" can_write="True"/>
                    <field name="last_activity_time" invisible="1"/>
                    <field name="last_activity" invisible="1"/>
                    <field name="work_contact_id" invisible="1" on_change="1" can_create="True" can_write="True"/>
                    <header>
                        <button name="235" string="Iniciar plan" type="action" invisible="not active or not id" context="{'sort_by_responsible': True}"/>
                    </header>
                    <sheet>
                        <div name="button_box" class="oe_button_box">
                <button name="250" icon="fa-users" type="action" context="{'hierarchy_res_id': id}" invisible="(not parent_id and not child_ids) or parent_id == id">
                    <div class="o_stat_info">
                        <span class="o_stat_text">Organigrama</span>
                    </div>
                </button>
                    <button name="action_related_contacts" class="oe_stat_button" icon="fa-address-card-o" type="object" help="Contactos relacionados">
                        <div class="o_field_widget o_stat_info">
                            <span class="o_stat_value"><field name="related_partners_count"/></span>
                            <span class="o_stat_text">Contactos</span>
                        </div>
                    </button>
                        </div>
                        <widget name="web_ribbon" title="Archivado" bg_color="text-bg-danger" invisible="active"/>
                        <field name="avatar_128" invisible="1"/>
                        <div class="row justify-content-between position-relative w-100 m-0 mb-2">
                            <div class="oe_title mw-75 ps-0 pe-2">
                                <h1 class="d-flex flex-row align-items-center">
                                    <div invisible="not user_id" class="me-2">
                                        <widget name="hr_employee_chat" invisible="not context.get('chat_icon')"/>
                                    </div>
                                    <field name="name" placeholder="Nombre del empleado" required="True" style="font-size: min(4vw, 2.6rem);" on_change="1"/>
                                </h1>
                                <h2>
                                    <field name="job_title" placeholder="Nombre del puesto"/>
                                </h2>
                            </div>
                            <div class="o_employee_avatar m-0 p-0">
                                <field name="image_1920" widget="image" class="oe_avatar m-0" options="{&quot;zoom&quot;: true, &quot;preview_image&quot;:&quot;avatar_128&quot;}" on_change="1"/>
                                <field name="show_hr_icon_display" invisible="1"/>
                                <field name="hr_icon_display" class="d-flex align-items-end fs-6 o_employee_availability" invisible="not show_hr_icon_display or not id" widget="hr_presence_status"/>
                            </div>
                        </div>
                        <group>
                            <group>
                                <field name="work_email" widget="email" placeholder="Por ejemplo, johndoe@ejemplo.com"/>
                                <field name="work_phone" widget="phone"/>
                                <field name="mobile_phone" widget="phone"/>
                                <field name="category_ids" widget="many2many_tags" options="{'color_field': 'color', 'no_create_edit': True}" placeholder="Etiquetas" can_create="True" can_write="True"/>
                                <field name="company_id" on_change="1" can_create="True" can_write="True"/>
                                <field name="company_country_id" invisible="1" on_change="1"/>
                                <field name="company_country_code" invisible="1"/>
                            </group>
                            <group>
                                <field name="department_id" on_change="1" can_create="True" can_write="True"/>
                                <field name="job_id" context="{'default_no_of_recruitment': 0, 'default_is_favorite': False}" placeholder="por ejemplo, Gerente de ventas" on_change="1" can_create="True" can_write="True"/>
                                <field name="parent_id" widget="many2one_avatar_user" on_change="1" can_create="True" can_write="True"/>
                                <field name="coach_id" widget="many2one_avatar_user" can_create="True" can_write="True"/>
                            </group>
                        </group>
                        <field name="employee_properties" columns="2"/>
                        <notebook>
                <page name="skills_resume" string="Currículum">
                    <div class="row">
                        <div class="o_hr_skills_editable o_hr_skills_group o_group_resume col-lg-7 d-flex flex-column">
                            <separator string="Currículum" class="mb-4"/>
                            <!-- This field uses a custom list view rendered by the 'resume_one2many' widget.
                                Adding fields in the list arch below makes them accessible to the widget
                            -->
                            <field mode="list" nolabel="1" name="resume_line_ids" widget="resume_one2many">
                                <list>
                                    <field name="line_type_id"/>
                                    <field name="name"/>
                                    <field name="description"/>
                                    <field name="date_start"/>
                                    <field name="date_end"/>
                                    <field name="display_type" column_invisible="True"/>
                                </list>
                            </field>

                        </div>
                        <div class="o_hr_skills_editable o_hr_skills_group o_group_skills col-lg-5 d-flex flex-column">
                            <field mode="list" nolabel="1" name="employee_skill_ids" widget="skills_one2many" class="mt-2">
                                <list>
                                    <field name="skill_id" on_change="1"/>
                                    <field name="skill_level_id" on_change="1"/>
                                    <field name="level_progress" widget="progressbar"/>
                                    <field name="skill_type_id" optional="hidden" on_change="1"/>
                                </list>
                            </field>
                        </div>
                    </div>
                </page>
                            <page name="public" string="Información de trabajo">
                                <div id="o_work_employee_container" class="d-lg-flex"> <!-- These two div are used to position org_chart -->
                                    <div id="o_work_employee_main" class="flex-grow-1">
                                        <group string="Ubicación">
                                            <field name="address_id" context="{'show_address': 1}" options="{&quot;highlight_first_line&quot;: True}" on_change="1" can_create="True" can_write="True"/>
                                            <field name="work_location_id" context="{'default_address_id': address_id}" placeholder="Por ejemplo, edificio 2, casa, etc." can_create="True" can_write="True"/>
                                        </group>
                                        <group name="managers" string="Aprobadores" class="hide-group-if-empty" invisible="1">
                                            <!-- is overridden in other hr related modules -->
                                        </group>
                                        <group name="departure" string="Salida" invisible="active">
                                            <field name="departure_reason_id" options="{'no_edit': True, 'no_create': True, 'no_open': True}" can_create="True" can_write="True"/>
                                            <field name="departure_description"/>
                                            <field name="departure_date"/>
                                        </group>
                                        <group string="Horario">
                                            <field name="resource_calendar_id" help="Las horas de trabajo predeterminadas se establecen en la configuración." on_change="1" can_create="True" can_write="True"/>
                                            <field name="id" invisible="1"/>
                                            <field name="tz" required="id"/>
                                        </group>
                                    </div>
                <div id="o_employee_right" class="col-lg-4 px-0 ps-lg-5 pe-lg-0">
                    <separator string="Organigrama"/>
                    <field name="child_ids" class="position-relative" widget="hr_org_chart" readonly="1" nolabel="1"/>
                </div>
                                </div>
                            </page>
                            <page name="personal_information" string="Información privada">
                                <group>
                                    <group string="Contacto privado">
                                        <label for="private_street" string="Dirección particular"/>
                                        <div class="o_address_format">
                                            <field name="private_street" placeholder="Calle..." class="o_address_street"/>
                                            <field name="private_street2" placeholder="Calle 2..." class="o_address_street"/>
                                            <field name="private_city" placeholder="Ciudad" class="o_address_city"/>
                                            <field name="private_state_id" class="o_address_state" placeholder="Estado" options="{'no_open': True, 'no_quick_create': True}" context="{'default_country_id': private_country_id}" can_create="True" can_write="True"/>
                                            <field name="private_zip" placeholder="C.P." class="o_address_zip"/>
                                            <field name="private_country_id" placeholder="País" class="o_address_country" options="{&quot;no_open&quot;: True, &quot;no_create&quot;: True}" can_create="True" can_write="True"/>
                                        </div>
                                        <field name="private_email" placeholder="Por ejemplo, micorreoprivado@ejemplo.com"/>
                                        <field name="private_phone"/>
                                        <field name="bank_account_id" context="{'default_partner_id': work_contact_id}" options="{'no_quick_create': True}" readonly="not id" can_create="True" can_write="True"/>
                                        <label for="distance_home_work"/>
                                        <div class="o_row" name="div_km_home_work">
                                            <field name="distance_home_work" class="o_hr_narrow_field"/>
                                            <span><field name="distance_home_work_unit"/></span>
                                        </div>
                                        <field name="private_car_plate"/>
                                    </group>
                                    <group string="Ciudadanía">
                                        <field name="country_id" options="{&quot;no_open&quot;: True, &quot;no_create&quot;: True}" can_create="True" can_write="True"/>
                                        <field name="identification_id"/>
                                        <field name="ssnid"/>
                                        <field name="passport_id"/>
                                        <field name="gender"/>
                                        <field name="birthday"/>
                                        <field name="place_of_birth"/>
                                        <field name="country_of_birth" can_create="True" can_write="True"/>
                                    </group>
                                    <group string="Emergencia" name="emergency">
                                        <field name="emergency_contact"/>
                                        <field name="emergency_phone" class="o_force_ltr"/>
                                        <separator string="Estado familiar"/>
                                        <field name="marital"/>
                                        <field name="spouse_complete_name" invisible="marital not in ['married', 'cohabitant']"/>
                                        <field name="spouse_birthdate" invisible="marital not in ['married', 'cohabitant']"/>
                                        <field name="children"/>
                                    </group>
                                    <group string="Educación">
                                        <field name="certificate"/>
                                        <field name="study_field"/>
                                        <field name="study_school"/>
                                        <separator name="has_work_permit" string="Permiso de trabajo"/>
                                        <field name="visa_no"/>
                                        <field name="permit_no" on_change="1"/>
                                        <field name="visa_expire"/>
                                        <field name="work_permit_expiration_date"/>
                                        <field name="work_permit_name" invisible="1"/>
                                        <field name="has_work_permit" widget="work_permit_upload" filename="work_permit_name"/>
                                    </group>
                                </group>
                            </page>
                            <page name="hr_settings" string="Ajustes">
                                <group>
                                    <group string="Estado" name="active_group">
                                        <field name="employee_type"/>
                                        <label for="user_id"/>
                                        <div class="o_row">
                                            <field name="user_id" string="Usuario relacionado" help="" domain="[('company_ids', 'in', company_id), ('share', '=', False)]" context="{'default_create_employee_id': id}" widget="many2one_avatar_user" on_change="1" can_create="True" can_write="True"/>
                                            <button string="Crear usuario" class="btn btn-link" type="object" name="action_create_user" invisible="user_id"/>
                                        </div>
                                    </group>
                                    <group string="Asistencia/punto de venta" name="identification_group">
                                        <field name="pin" string="Código NIP"/>
                                        <label for="barcode"/>
                                        <div class="o_row">
                                            <field name="barcode"/>
                                            <button string="Generar" class="btn btn-link" type="object" name="generate_random_barcode" invisible="barcode"/>
                                            <button name="241" string="Imprimir insignia" class="btn btn-link" type="action" invisible="not barcode"/>
                                        </div>
                                    </group>
                                    <group name="application_group" string="Ajustes de la aplicación" invisible="1"/>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                    <chatter reload_on_follower="True"/>
                </form>